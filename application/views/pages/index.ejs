<body>
  <img src='/images/SwiftThirftBanner2.png' class='banner'>

  <div class="action-prompts">
    <div class="prompt sell">
      <!-- Add a full-sized link that covers the entire prompt -->
      <a href="/sell" class="prompt-link" aria-label="Post an item"></a>
      <h2>Ready to sell?</h2>
      <p>Post an item</p>
      <!-- Keep the original link for accessibility, but hide it visually -->
      <p><a href="/sell">Post an item</a></p>
    </div>
    <div class="prompt buy">
      <!-- Add a full-sized link that covers the entire prompt -->
      <a href="/results" class="prompt-link" aria-label="Browse listings"></a>
      <h2>Find something good</h2>
      <p>Browse listings</p>
      <!-- Keep the original link for accessibility, but hide it visually -->
      <p><a href="/results">Browse listings</a></p>
    </div>
  </div>

  <h1 class="featured-title">Featured Items</h1>

  <div x-data='{ listings: <%= JSON.stringify(listings) %> }' class="featured-grid">
    <template x-for="listing in listings" :key="listing.listing_id">
      <a :href="`/listing/${listing.listing_id}`" class="featured-card">
        <div class="featured-content">
          <h2 class="featured-name" x-text="listing.listing_name"></h2>
          <p class="featured-description" x-text="listing.listing_description"></p>
          <p class="featured-price">Price: $<span x-text="listing.price"></span></p>
          <div class="listing-image-container">
            <template x-if="listing.primary_image">
              <img class="listing-image" :src="'/images/'+ listing.primary_image" :alt="listing.listing_name">
            </template>
            <template x-if="!listing.primary_image">
              <div class="listing-image no-image">No image available</div>
            </template>
          </div>
        </div>
      </a>
    </template>
  </div>

  <%- include('../partials/footer') %>
</body>

</html>
