<body>
  <div class="listing-detail-container" x-data="listingDetailApp()" x-init="init()">
    <!-- Left side: Image + Seller Info -->
    <div class="listing-left">
      <div class="listing-image-container" x-show="pictures.length > 0">
        <button class="nav-arrow left" @click="prevImage" x-show="pictures.length > 1"><</button>

        <img class="listing-image" :src="`/images/${pictures[currentImageIndex].originalName}`" alt="Listing Image" />

        <button class="nav-arrow right" @click="nextImage" x-show="pictures.length > 1">></button>
      </div>

      <p x-text="`Image ${currentImageIndex + 1} of ${pictures.length}`"></p>

      <div class="seller-profile-box">
        <!-- Seller profile picture -->
        <template x-if="listing.profile_picture">
          <img class="profile-picture" :src="`/images/${listing.profile_picture}`" alt="Seller Profile Picture" />
        </template>

        <template x-if="!listing.profile_picture">
          <div class="profile-picture"></div> <!-- fallback box if no image -->
        </template>

        <!-- Seller name -->
        <p class="seller-info">
          <strong>Seller:</strong>
          <span
            x-text="listing.firstName && listing.lastName ? `${listing.firstName} ${listing.lastName}` : 'Unknown Seller'"></span>
        </p>
      </div>

    </div>

    <!-- Right side: All listing info -->
    <div class="listing-right">
      <h1>Item: <span x-text="listing.listing_name"></span></h1>

      <p class="category-box">
        <strong>Category:</strong>
        <span x-text="listing.category_name || 'No category assigned'"></span>
      </p>

      <p class="description-box">
        <strong>Description:</strong>
        <span x-text="listing.listing_description || 'No description available.'"></span>
      </p>

      <p class="price">
        Price: $<span x-text="formatPrice(listing.price)"></span>
      </p>

      <div class="action-buttons">
       
        <!-- Show only if category is 'Services' -->
        <template x-if="listing.category_name === 'Services'">
          <a :href="`/service/${listing.listing_id}/calendar`" class="action-button">
            View Availability
          </a>
        </template>

         <a :href="`/message/${listing.listing_id}`" class="action-button">Message Owner</a>
        <a href="/results" class="action-button">Back to Results</a>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
</body>

</html>