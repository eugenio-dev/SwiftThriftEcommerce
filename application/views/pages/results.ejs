<style>
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f9f9f9;
  color: #333;
}
h1 {
  text-align: center;
  margin: 20px 0;
  font-size: 2rem;
  color: #444;
}
.results-count {
  text-align: center;
  margin: 10px 0 20px;
  font-size: 1.1rem;
  color: #666;
}
.listings {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20px;
  padding: 20px;
  max-width: 1200px;
  margin: 0 auto;
}
.listing {
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 15px;
  width: 300px;
  background-color: #fff;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  text-align: center;
  display: flex;
  flex-direction: column;
}
.listing:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
}
.listing-image-container {
  width: 100%;
  height: 200px;
  margin-bottom: 15px;
  overflow: hidden;
  border-radius: 6px;
}
.listing-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}
.listing:hover .listing-image {
  transform: scale(1.05);
}
.listing h2 {
  font-size: 1.5rem;
  color: #333;
  margin-bottom: 10px;
  word-wrap: break-word;
}
.listing p {
  font-size: 1rem;
  color: #666;
  margin: 5px 0;
  word-wrap: break-word;
}
.listing .price {
  font-weight: bold;
  color: #000;
  margin-top: 10px;
  margin-bottom: 10px;
}
.seller-info {
  margin-bottom: 15px;
  color: #555;
  font-size: 0.9rem;
}
.seller-name {
  font-weight: bold;
}
.no-results {
  text-align: center;
  padding: 40px;
  font-size: 1.2rem;
  color: #666;
}
.no-image {
  background-color: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 0.9rem;
}
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin-top: auto;
}
.action-button {
  background-color: #e6d5f5;
  color: #333;
  border: none;
  padding: 10px 15px;
  border-radius: 5px;
  cursor: pointer;
  font-weight: bold;
  transition: background-color 0.2s;
  text-decoration: none;
  display: inline-block;
}
.action-button:hover {
  background-color: #d6c1f0;
}
@media (max-width: 768px) {
  .listings {
    flex-direction: column;
    align-items: center;
  }
  .listing {
    width: 90%;
  }
}
</style>
<body>
  <div x-data="searchResultsApp()">
    <!-- Results header -->
    <h1 x-text="searchQuery.trim() ? 'Results for: ' + searchQuery : 'All Listings'"></h1>
    <div class="results-count">
      <span x-text="resultsCount + ' results found'"></span>
    </div>
    <!-- Listings grid, styled to match your screenshot -->
    <div class="listings">
      <template x-for="listing in listings" :key="listing.listing_id">
        <div class="listing">
          <div class="listing-image-container">
            <template x-if="listing.primary_image">
              <img class="listing-image" :src="'/images/'+ listing.primary_image" :alt="listing.listing_name">
            </template>
            <template x-if="!listing.primary_image">
              <div class="listing-image no-image">No image available</div>
            </template>
          </div>
          <h2 x-text="listing.listing_name"></h2>
          <p x-text="listing.listing_description"></p>
          <p class="price">Price: $<span x-text="formatPrice(listing.price)"></span></p>
          <!-- Action buttons - always show both buttons -->
          <div class="action-buttons">
            <!-- Message Owner Button - always show -->
            <a :href="'/message/' + listing.listing_id" class="action-button">
              Message Owner
            </a>
            
            <!-- View Details Button -->
            <a :href="'/listing/' + listing.listing_id" class="action-button">
              View Details
            </a>
          </div>
        </div>
      </template>
    </div>
    <!-- No results message -->
    <div x-show="resultsCount === 0" class="no-results">
      No listings found. Try adjusting your search criteria.
    </div>
  </div>
  <%- include('../partials/footer') %>
</body>
</html>